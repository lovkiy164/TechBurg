<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="250dp"
    android:layout_margin="5dp"
    android:background="@drawable/shape">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="20dp"
            android:id="@+id/delete"
            android:background="@mipmap/cross"
            android:textColor="#A7A9BE"
            android:layout_width="23dp"
            android:layout_height="23dp" />

        <LinearLayout
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/delete"
            android:layout_width="200dp"
            android:layout_height="230dp"
            android:orientation="vertical"
            android:padding="7dp">

            <TextView
                android:padding="3dp"
                android:background="@drawable/sale"
                android:layout_gravity="left"
                android:id="@+id/sale"
                android:textSize="12dp"
                android:textColor="#1F53E4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" -50% "/>

            <ImageView
                android:id="@+id/image"
                android:layout_gravity="center"
                android:layout_width="180dp"
                android:layout_height="135dp"
                android:src="@mipmap/iphone_11_pro_1_silver"/>

            <TextView
                android:layout_gravity="start"
                android:id="@+id/name"
                android:textSize="17dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#0A1034"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="iPhone 11 Pro"/>

            <TextView
                android:layout_gravity="start"
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textSize="14sp"
                android:text="USD 425"
                android:textColor="#0001FC"/>

            <TextView
                android:layout_gravity="start"
                android:id="@+id/color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textSize="13sp"
                android:text="Silver"
                android:textColor="#A7A9BE"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>